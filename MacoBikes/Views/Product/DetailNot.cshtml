@model Model.Product

@{
    ViewData["Title"] = "DetailNot";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
    int quantity = 0;

}
<style>
    .img {
        float:left;
    }    
</style>


<h1>Detail of product</h1>



<form asp-action="DetailNot">
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4 class="alert-heading">Helaas</h4>
        <p class="mb-0">Een aankoop is, per instructie van uw wederhelft, niet mogelijk op dit moment. Gelieve het later opnieuw te proberen <a asp-controller="Product" asp-action="Index">Terug naar producten</a>.</p>
    </div>
    
    <div asp-validation-summary="ModelOnly" class="text-muted"></div>"
    <input type="hidden" asp-for="ProductId" />
    <img style="height: 250px; width: 250px; display: block;" src="~/images/bikes/bike1.jpg" alt="Card image">
    <div class="form-group">
        <label asp-for="Name">@Html.DisplayNameFor(model => model.Name): </label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name" readonly />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">@Html.DisplayNameFor(model => model.Price): </label>
        <input type="text" class="form-control" asp-for="Price" placeholder="Price" readonly />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label for="exampleSelect1">Quantity</label>
        <select class="form-control" id="quantity">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
        </select>
    </div>

    <div class="form-group">

        <input type="submit" value="Add to shoppingcart" class="btn btn-primary" />
        <button class="btn btn-primary" asp-controller="Product" asp-action="Index">Back to products</button>
    </div>

</form>





