@model Model.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h1>Add a new bike</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">@Html.DisplayNameFor(model => model.Name): </label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Product Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">@Html.DisplayNameFor(model => model.Price): </label>
                <input type="text" class="form-control" asp-for="Price" placeholder="Price" required/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <button class="btn btn-primary" asp-controller="Product" asp-action="Index">Back to products</button>
            </div>

        </form>
    </div>
</div>
