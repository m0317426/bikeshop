@model List<Model.Customer>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h1>Customers</h1>
<a asp-controller="Customer" asp-action="Create">Add a new customer</a>
<p></p>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">First name</th>
            <th scope="col">Name</th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.Name</td>
                <td>
                    <a asp-controller="Customer" asp-action="Edit" asp-route-CustomerId="@customer.CustomerId">Edit</a>
                    <a asp-controller="Customer" asp-action="Remove" asp-route-CustomerId="@customer.CustomerId">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>