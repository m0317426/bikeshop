@model List<Model.ShoppingBag>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h1>ShoppingBag</h1>


<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">First name</th>
            <th scope="col">Name</th>
            <th scope="col">Product</th>
            <th scope="col">Quantity</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var shoppingBag in Model)
        {
            <tr>
                <td hidden>@shoppingBag.ShoppingBagId</td>
                <td>@shoppingBag.Customer.FirstName</td>
                <td>@shoppingBag.Customer.Name</td>
                <td>Product@*@shoppingBag.Product.Name*@</td>
                <td>Quantity</td>
                <td>
                    <a asp-controller="ShoppingBag" asp-action="Edit" asp-route-CustomerId="@shoppingBag.ShoppingBagId">Edit</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>